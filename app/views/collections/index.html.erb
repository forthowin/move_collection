<%= render 'shared/content_title', title: 'My Movie Collection' %>

<table class="table table-striped">
  <tr>
    <th>Movie</th>
    <th><%= sortable_column "Title" %></th>
    <th><%= sortable_column "Format" %></th>
    <th><%= sortable_column "Length" %></th>
    <th><%= sortable_column "Release Year" %></th>
    <th><%= sortable_column "Rating" %></th>
    <th>Remove</th>
  </tr>
  <% @collections.each do |collection| %>
    <tr>
      <td>
        <%= link_to movie_path(collection.movie) do %>
          <img src=<%= collection.movie.cover.thumb.url %>>
        <% end %>
      </td>
      <td><%= link_to collection.movie.title, movie_path(collection.movie) %></td>
      <td><%= collection.movie.format %></td>
      <td><%= format_length(collection.movie.length) %></td>
      <td><%= collection.movie.release_year %></td>
      <td><%= format_rating(collection.movie) %></td>
      <td>
        <%= link_to collection_path(collection), method: :delete, data: { confirm: "Are you sure you want to remove this movie?" } do %>
          <i class="glyphicon glyphicon-remove"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>