<%= bootstrap_form_for @movie do |f| %>
  <div class="row">
    <div class= "form-title">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="row">
    <div class= "form-options">
      <%= f.select :format, [["VHS", "VHS"], ["DVD", "DVD"], ["Streaming", "Streaming"]], { label: "Format" }, { class: "selectpicker" } %>
    </div>
  </div>
  <div class="row">
    <div class= "form-options">
      <%= f.text_field :length, placeholder: "1-500 minutes" %>
    </div>
  </div>
  <div class="row">
    <div class= "form-options">
      <%= f.text_field :release_year, placeholder: "1800-2100" %>
    </div>
  </div>
  <%= f.form_group :rating, label: { text: "Rating" }, class: 'form-inline' do %>
    <%= f.radio_button :rating, 1, label: "1" %>
    <%= f.radio_button :rating, 2, label: "2" %>
    <%= f.radio_button :rating, 3, label: "3" %>
    <%= f.radio_button :rating, 4, label: "4" %>
    <%= f.radio_button :rating, 5, label: "5" %>
  <% end %>
  <%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>