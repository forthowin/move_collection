<%= render 'shared/content_title', title: "#{@movie.title}" %>

<h3><%= "Format: #{@movie.format}" %></h3>
<h3><%= "Length: #{format_length(@movie.length)}" %></h3>
<h3><%= "Release Year: #{@movie.release_year}" %></h3>
<h3><%= "Rating: #{format_rating(@movie)}" %></h3>

<p class="edit-button"><%= link_to "edit", edit_movie_path, class: "btn btn-info" %></p>
<p class="delete-button"><%= link_to "delete", movie_path, method: 'delete', data: { confirm: "Are you sure you want to delete this movie?" }, class: "btn btn-danger" %></p>