<h1><%= @movie.title %></h1>
<hr>

<h3><%= "Format: #{@movie.format}" %></h3>
<h3><%= "Length: #{@movie.length}" %></h3>
<h3><%= "Release Year: #{@movie.release_year}" %></h3>
<h3><%= @movie.rating.nil? ? "Rating: -" : "Rating: #{@movie.rating}/5" %></h3>

<p class="edit-button"><%= link_to "edit", edit_movie_path, class: "btn btn-info" %></p>
<p class="delete-button"><%= link_to "delete", movie_path, method: 'delete', class: "btn btn-danger" %></p>